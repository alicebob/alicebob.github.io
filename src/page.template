<!DOCTYPE html>
<html>
<head>
    <title>{{ .title }}</title>
    <style>
html {
    height: 100%;
}
body {
    display: grid;
    grid-template-columns: 300px minmax(100px, 600px);
    grid-template-rows: 50px auto;
    height: 100%;
    margin: 0;
}
nav {
    grid-row: 1;
    grid-column: 1 / 3;
}
article {
    grid-row: 2;
    grid-column: 2;
}
aside {
    grid-row: 2;
    grid-column: 1;
}
    </style>
</head>
<body>
    <nav>
        <a href="{{ relative "/index.html" }}">home</a> - 
        <a href="{{ relative "/projects.html" }}">projects</a> - 
        <a href="{{ relative "/b/index.html" }}">articles</a>
    </nav>
    <article>
        {{ .content }}
    </article>
    <aside>sidebar!</aside>
</body>
</html>
